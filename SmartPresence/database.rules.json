{
  "rules": {
    "verificationRequests": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "teacherSubjects": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "verifiedUsers": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "classes": {
      ".read": "auth != null",
      "$teacherId": {
        ".write": "auth != null && auth.uid === $teacherId",
        "$department": {
          "$classId": {
            "students": {
              "$studentId": {
                ".write": "auth != null && (auth.uid === $studentId || auth.uid === $teacherId)"
              }
            }
          }
        }
      }
    }
  }
}